import plotly.graph_objects as go
import numpy as np

# Re-define color mapping for Hex strings (Plotly)
def get_voxel_hex(val):
    if val == 0: return None
    
    # Priority: Features > Bottom Type > Water
    if val & FLAG_PIER: return '#8B4513'      # SaddleBrown
    if val & FLAG_DRIFTWOOD: return '#A0522D' # Sienna
    
    if val & FLAG_WATER_GRASS: return '#32CD32' # LimeGreen
    
    if val & FLAG_STONE: return '#808080'     # Gray
    if val & FLAG_ROCK_SHELF: return '#696969'# DimGray
    
    if val & FLAG_DEEP_PIT: return '#00008B'  # DarkBlue
    if val & FLAG_RIDGE: return '#DAA520'     # GoldenRod
    if val & FLAG_FAULT: return '#FF4500'     # OrangeRed
    
    if val & FLAG_GRAVEL: return '#A9A9A9'    # DarkGray
    if val & FLAG_MUD: return '#8B4500'       # Darker Brown
    
    if val & FLAG_BAY: return '#4682B4'       # SteelBlue
    
    if val & FLAG_WATER: return '#1E90FF'     # DodgerBlue
    
    return '#000000'

print("Preparing Plotly data...")

# Get indices of non-zero elements
# Original Data: [X, Y, Z]
# Unity Coords: X=Right, Y=Up, Z=Forward
# Plotly Coords for consistency: 
#   Map Unity X -> Plotly X
#   Map Unity Z -> Plotly Y (Horizontal plane)
#   Map Unity Y -> Plotly Z (Vertical)

indices = np.argwhere(data > 0)
# indices is [N, 3] where cols are x, y, z indices in original array
# Original array dimensions correspond to [UnityX, UnityY, UnityZ]

x_vals = indices[:, 0]
y_vals = indices[:, 2] # Unity Z maps to Plotly Y
z_vals = indices[:, 1] # Unity Y maps to Plotly Z

values = data[indices[:, 0], indices[:, 1], indices[:, 2]]

# Vectorize color lookup
v_get_hex = np.vectorize(get_voxel_hex)
colors = v_get_hex(values)

print(f"Total points to render: {len(x_vals)}")

# Create Mask for Scatter3d (although we already filtered by > 0)
# Optimization: if too many points, Scatter3d might be slow.
# 140k points is borderline but usually okay for modern browsers.

fig = go.Figure(data=[go.Scatter3d(
    x=x_vals,
    y=y_vals,
    z=z_vals,
    mode='markers',
    marker=dict(
        size=2,
        color=colors,
        opacity=0.8,
        symbol='square' # Attempt to look like voxels
    )
)])

# Aspect Ratio Configuration
# User wants vertical axis (Z here) to not be huge gap from others, maybe 0.3 relative to X/Y
# Data ranges: X ~ 134, Y ~ 134, Z ~ 8
# If aspectmode='data', Z will be very thin (1/17th).
# If aspectmode='cube', Z will be stretched to equal X/Y visual size (17x stretch).
# User wants ~3x stretch relative to data, or "gap not that big".
# Let's try manual aspect ratio. 
# We want the bounding box to look like: X=1, Y=1, Z=0.3 (approx 1/3 height of width)

fig.update_layout(
    scene=dict(
        xaxis=dict(title='Unity X'),
        yaxis=dict(title='Unity Z'),
        zaxis=dict(title='Unity Y'),
        aspectmode='manual',
        aspectratio=dict(x=1, y=1, z=0.3) 
    ),
    title=f"Interactive Voxel Map: {os.path.basename(file_path)} (Y-up)"
)

fig.show()
